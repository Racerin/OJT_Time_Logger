<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %} OJT Timer Login {% endblock %}</title>
    {% block js %}{% endblock %}
    {% block css %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css" />
    {% endblock %}
    
</head>

<body>
    <section class="hero is-primary is-fullheight">

        <div class="hero-head">
            <nav class="navbar">
                <div class="container">

                    <div id="navbarMenuHeroA" class="navbar-menu">
                        <div class="navbar-end">
                            <a href="{{ url_for('home') }}" class="navbar-item">
                                Home
                            </a>
                            {% if current_user %}
                                {% if current_user.is_authenticated %}
                                    <a href="{#{ url_for('user.settings') }#}" class="navbar-item">
                                        Profile
                                    </a>
                                    <a href="{{ url_for('user.settings') }}" class="navbar-item">
                                        Settings
                                    </a>
                                    <a href="{{ url_for('user.logout') }}" class="navbar-item">
                                        Logout
                                    </a>
                                {% else %}
                                    <a href="{#{ url_for('user.signup') }#}" class="navbar-item">
                                        Sign Up
                                    </a>
                                    <a href="{{ url_for('user.login') }}" class="navbar-item">
                                        Login
                                    </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="hero-body">
            <div class="container has-text-centered">
               {% block body %}
               {% endblock body %}
            </div>
        </div>
    </section>
    {% include "footer.html" ignore missing %}
</body>

</html>